# name: test/sql/type_integer.test
# description: test for INTEGER type
# group: [sql_type_integer]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('Driver={DuckDB Driver};')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT 42::INTEGER')
----
42

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::INTEGER', params=row(42::INTEGER))
----
42

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::INTEGER', params=row(0::INTEGER))
----
0

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::INTEGER', params=row(2147483647::INTEGER))
----
2147483647

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::INTEGER', params=row(-2147483647::INTEGER))
----
-2147483647

statement ok
SET VARIABLE params1 = odbc_create_params()

statement ok
PREPARE p1 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::INTEGER', params_handle=getvariable('params1'))

statement ok
PREPARE p1_bind AS SELECT odbc_bind_params(getvariable('params1'), row(?))

statement ok
EXECUTE p1_bind(2147483647::INTEGER)

query I
EXECUTE p1
----
2147483647

statement ok
DEALLOCATE p1_bind

statement ok
DEALLOCATE p1

statement ok
SELECT odbc_close(getvariable('conn'))
