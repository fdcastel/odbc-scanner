# name: test/sql/firebird/06_date.test
# description: test for Firebird DATE type
# group: [firebird_date]

require odbc_scanner

require-env FIREBIRD_AVAILABLE

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

# Basic DATE test
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''2024-01-15'' AS DATE) FROM rdb$database')
----
2024-01-15

# Different date formats
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''2025-12-31'' AS DATE) FROM rdb$database')
----
2025-12-31

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''1970-01-01'' AS DATE) FROM rdb$database')
----
1970-01-01

# CURRENT_DATE
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CURRENT_DATE FROM rdb$database')
----
<REGEX>:\d{4}-\d{2}-\d{2}

# NULL value
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(NULL AS DATE) FROM rdb$database')
----
NULL

# Verify column type
query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''2024-01-15'' AS DATE) FROM rdb$database')
)
----
DATE

statement ok
SELECT odbc_close(getvariable('conn'))
