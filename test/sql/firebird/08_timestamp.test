# name: test/sql/firebird/08_timestamp.test
# description: test for Firebird TIMESTAMP type
# group: [firebird_timestamp]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

# Basic TIMESTAMP test
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''2024-01-15 12:30:45'' AS TIMESTAMP) FROM rdb$database')
----
2024-01-15 12:30:45

# Different timestamp values
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''2025-12-31 23:59:59'' AS TIMESTAMP) FROM rdb$database')
----
2025-12-31 23:59:59

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''1970-01-01 00:00:00'' AS TIMESTAMP) FROM rdb$database')
----
1970-01-01 00:00:00

# CURRENT_TIMESTAMP
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CURRENT_TIMESTAMP FROM rdb$database')
----
<REGEX>:\d{4}-\d{2}-\d{2} \d{2}:\d{2}:\d{2}

# NULL value
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(NULL AS TIMESTAMP) FROM rdb$database')
----
NULL

# Verify column type
query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''2024-01-15 12:30:45'' AS TIMESTAMP) FROM rdb$database')
)
----
TIMESTAMP

statement ok
SELECT odbc_close(getvariable('conn'))
