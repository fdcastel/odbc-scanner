# name: test/sql/firebird/09_boolean.test
# description: test for Firebird BOOLEAN type (Firebird 3.0+)
# group: [firebird_boolean]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

# Basic BOOLEAN test
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(TRUE AS BOOLEAN) FROM rdb$database')
----
true

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(FALSE AS BOOLEAN) FROM rdb$database')
----
false

# BOOLEAN expressions
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT (1 = 1) FROM rdb$database')
----
true

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT (1 = 2) FROM rdb$database')
----
false

# NULL value
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(NULL AS BOOLEAN) FROM rdb$database')
----
NULL

# Verify column type
query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(TRUE AS BOOLEAN) FROM rdb$database')
)
----
BOOLEAN

statement ok
SELECT odbc_close(getvariable('conn'))
