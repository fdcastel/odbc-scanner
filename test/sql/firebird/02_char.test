# name: test/sql/firebird/02_char.test
# description: test for Firebird CHAR type
# group: [firebird_char]

require odbc_scanner

require-env FIREBIRD_AVAILABLE

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

# Basic CHAR test (note: CHAR pads with spaces)
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''abc'' AS CHAR(5)) FROM rdb$database')
----
abc  

# CHAR with exact length
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''test'' AS CHAR(4)) FROM rdb$database')
----
test

# CHAR with NULL
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(NULL AS CHAR(10)) FROM rdb$database')
----
NULL

statement ok
SELECT odbc_close(getvariable('conn'))
