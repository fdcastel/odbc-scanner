# name: test/sql/firebird/10_basic_queries.test
# description: basic Firebird queries to test connectivity and basic operations
# group: [firebird_basic]

require odbc_scanner

require-env FIREBIRD_AVAILABLE

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

# Simple constant query
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT 1 FROM rdb$database')
----
1

# Multiple columns
query II
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT 1, 2 FROM rdb$database')
----
1	2

# String concatenation
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ''Hello'' || '' '' || ''World'' FROM rdb$database')
----
Hello World

# Arithmetic operations
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT 10 + 20 FROM rdb$database')
----
30

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT 100 - 25 FROM rdb$database')
----
75

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT 6 * 7 FROM rdb$database')
----
42

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT 100 / 4 FROM rdb$database')
----
25

# CASE expression
query I
SELECT * FROM odbc_query(getvariable('conn'), 
  'SELECT CASE WHEN 1 = 1 THEN ''correct'' ELSE ''wrong'' END FROM rdb$database')
----
correct

# COALESCE
query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT COALESCE(NULL, ''default'') FROM rdb$database')
----
default

statement ok
SELECT odbc_close(getvariable('conn'))
