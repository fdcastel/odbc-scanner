# name: test/sql/type_timestamp.test
# description: test for TIMESTAMP type
# group: [sql_type_timestamp]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('Driver={DuckDB Driver};')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ''2020-12-31 23:59:59''::TIMESTAMP')
----
2020-12-31 23:59:59

query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ''2020-12-31 23:59:59''::TIMESTAMP')
)
----
TIMESTAMP

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::TIMESTAMP', params=row('2020-12-31 23:59:59'::TIMESTAMP))
----
2020-12-31 23:59:59

statement ok
SET VARIABLE params1 = odbc_create_params()

statement ok
PREPARE p1 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::TIMESTAMP', params_handle=getvariable('params1'))

statement ok
PREPARE p1_bind AS SELECT odbc_bind_params(getvariable('params1'), row(?))

statement ok
EXECUTE p1_bind('2020-12-31 23:59:59.123456789'::TIMESTAMP)

query I
EXECUTE p1
----
2020-12-31 23:59:59

statement ok
EXECUTE p1_bind('1970-01-01 00:00:00'::TIMESTAMP)

query I
EXECUTE p1
----
1970-01-01 00:00:00

statement ok
EXECUTE p1_bind('1969-12-31 00:00:00'::TIMESTAMP)

query I
EXECUTE p1
----
1969-12-31 00:00:00

statement ok
DEALLOCATE p1_bind

statement ok
DEALLOCATE p1

statement ok
SELECT odbc_close(getvariable('conn'))
