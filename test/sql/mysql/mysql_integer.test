# name: test/sql/mysql/integer.test
# description: test for MySQL INTEGER type
# group: [sql_mysql_integer]

require odbc_scanner

require-env MYSQL_AVAILABLE

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(42 AS SIGNED)')
----
42

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS SIGNED)', params=row(42::INTEGER))
----
42

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS SIGNED)', params=row(0::INTEGER))
----
0

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS SIGNED)', params=row(2147483647::INTEGER))
----
2147483647

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS SIGNED)', params=row(-2147483647::INTEGER))
----
-2147483647

statement ok
SET VARIABLE params1 = odbc_create_params()

statement ok
PREPARE p1 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS SIGNED)', params_handle=getvariable('params1'))

statement ok
PREPARE p1_bind AS SELECT odbc_bind_params(getvariable('conn'), getvariable('params1'), row(?))

statement ok
EXECUTE p1_bind(2147483647::INTEGER)

query I
EXECUTE p1
----
2147483647

statement ok
DEALLOCATE p1_bind

statement ok
DEALLOCATE p1

statement ok
SELECT odbc_close(getvariable('conn'))
