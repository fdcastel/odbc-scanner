# name: test/sql/mysql/params_handle.test
# description: test MySQL odbc_create_params() and odbc_bind_params() functions 
# group: [sql_mysql_params_handle]

require-env MYSQL_AVAILABLE

statement error
SET VARIABLE params1 = odbc_create_params()
----
Catalog Error: Scalar Function with name odbc_create_params does not exist!

statement error
SELECT odbc_bind_params()
----
Catalog Error: Scalar Function with name odbc_bind_params does not exist!

require odbc_scanner

statement error
SELECT odbc_bind_params(NULL, NULL, row(42))
----
Invalid Input Error: 'odbc_bind_params' error: specified ODBC connection must be not NULL

statement error
SELECT odbc_bind_params(42, NULL, row(42))
----
Invalid Input Error: 'odbc_bind_params' error: open ODBC connection not found, id: 42

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

statement error
SELECT odbc_bind_params(getvariable('conn'), NULL, row(42))
----
Invalid Input Error: 'odbc_bind_params' error: specified parameters handle argument must be not NULL


statement error
SELECT odbc_bind_params(getvariable('conn'), 42, row(42))
----
Invalid Input Error: 'odbc_bind_params' error: specified parameters handle not found, ID: 42

statement ok
SET VARIABLE params1 = odbc_create_params()

statement error
SELECT odbc_bind_params(getvariable('conn'), getvariable('params1'), NULL)
----
Invalid Input Error: Cannot extract parameters from STRUCT: specified STRUCT is NULL, column: 2, columns count: 3

statement ok
PREPARE p1 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS SIGNED)', params_handle=getvariable('params1'))

statement ok
SELECT odbc_bind_params(getvariable('conn'), getvariable('params1'), row(42))

query I
EXECUTE p1
----
42

