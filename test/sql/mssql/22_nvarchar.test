# name: test/sql/mssql/22_nvarchar.test
# description: test for MSSQL NVARCHAR type
# group: [mssql_22_nvarchar]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''foo'' AS NVARCHAR(3))')
----
foo

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''foo'' AS NVARCHAR(6))')
----
foo

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''foo'' AS NVARCHAR(MAX))')
----
foo

query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''foo'' AS NVARCHAR(MAX))')
)
----
VARCHAR

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS NVARCHAR(MAX))', params=row('foo'::VARCHAR))
----
foo

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS NVARCHAR(MAX))', params=row('ðŸŒŒ'::VARCHAR))
----
ðŸŒŒ

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS NVARCHAR(MAX))', params=row(NULL::VARCHAR))
----
NULL

statement ok
SET VARIABLE params1 = odbc_create_params()

statement ok
PREPARE p1 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS NVARCHAR(MAX))', params_handle=getvariable('params1'))

statement ok
PREPARE p1_bind AS SELECT odbc_bind_params(getvariable('conn'), getvariable('params1'), row(?))

statement ok
EXECUTE p1_bind('foo'::VARCHAR)

query I
EXECUTE p1
----
foo

statement ok
EXECUTE p1_bind('ðŸŒŒ'::VARCHAR)

query I
EXECUTE p1
----
ðŸŒŒ

statement ok
DEALLOCATE p1_bind

statement ok
DEALLOCATE p1

statement ok
SELECT odbc_close(getvariable('conn'))
