# name: test/sql/mssql/08_money.test
# description: test for MONEY type with MSSQL
# group: [mssql_08_money]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(42.1234 AS MONEY)')
----
42.1234

query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(41.1234 AS MONEY)')
)
----
DECIMAL(19,4)

statement error
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(42.1234 AS MONEY)',
  enable_columns_binding=TRUE)
----
Inconsistent descriptor information

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS MONEY)', params=row(42.1234::DECIMAL(19,4)))
----
42.1234

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS MONEY)', params=row(0::DECIMAL(19,4)))
----
0

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS MONEY)', params=row(922337203685477.5807::DECIMAL(19,4)))
----
922337203685477.5807

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS MONEY)', params=row(-922337203685477.5808::DECIMAL(19,4)))
----
-922337203685477.5808

statement ok
SET VARIABLE params1 = odbc_create_params()

statement ok
PREPARE p1 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS MONEY)', params_handle=getvariable('params1'))

statement ok
PREPARE p1_bind AS SELECT odbc_bind_params(getvariable('conn'), getvariable('params1'), row(?))

statement ok
EXECUTE p1_bind(922337203685477.5807::DECIMAL(19,4))

query I
EXECUTE p1
----
922337203685477.5807

statement ok
EXECUTE p1_bind(-922337203685477.5808::DECIMAL(19,4))

query I
EXECUTE p1
----
-922337203685477.5808

statement ok
DEALLOCATE p1_bind

statement ok
DEALLOCATE p1

statement ok
SELECT odbc_close(getvariable('conn'))
