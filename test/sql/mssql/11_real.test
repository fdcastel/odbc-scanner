# name: test/sql/mssql/11_real.test
# description: test for MSSQL REAL type
# group: [mssql_11_real]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(42.123 AS REAL)')
----
42.123

query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(42.123 AS REAL)')
)
----
FLOAT

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(42.123 AS REAL)')
----
42.123

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(42.123 AS REAL)',
  enable_columns_binding=TRUE)
----
42.123

statement error
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''foo'' AS NVARCHAR(max)), CAST(42.123 AS REAL)',
  enable_columns_binding=TRUE)
----
Invalid Descriptor Index

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS REAL)', params=row(42.123::FLOAT))
----
42.123

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS REAL)', params=row(0::FLOAT))
----
0

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS REAL)', params=row(-42.123::FLOAT))
----
-42.123

statement ok
SET VARIABLE params1 = odbc_create_params()

statement ok
PREPARE p1 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS REAL)', params_handle=getvariable('params1'))

statement ok
PREPARE p1_bind AS SELECT odbc_bind_params(getvariable('conn'), getvariable('params1'), row(?))

statement ok
EXECUTE p1_bind(42.123::FLOAT)

query I
EXECUTE p1
----
42.123

statement ok
DEALLOCATE p1_bind

statement ok
DEALLOCATE p1

statement ok
SELECT odbc_close(getvariable('conn'))
