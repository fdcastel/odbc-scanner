# name: test/sql/mssql/01_tinyint.test
# description: test for MSSQL TINYINT type
# group: [mssql_01_tinyint]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(42 AS TINYINT)')
----
42

query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(42 AS TINYINT)')
)
----
UTINYINT

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(42 AS TINYINT)',
  enable_columns_binding=TRUE)
----
42

statement error
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''foo'' AS NVARCHAR(max)), CAST(42 AS TINYINT)',
  enable_columns_binding=TRUE)
----
Invalid Descriptor Index

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS TINYINT)', params=row(42::UTINYINT))
----
42

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS TINYINT)', params=row(0::UTINYINT))
----
0

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS TINYINT)', params=row(255::UTINYINT))
----
255

statement ok
SET VARIABLE params1 = odbc_create_params()

statement ok
PREPARE p1 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS TINYINT)', params_handle=getvariable('params1'))

statement ok
PREPARE p1_bind AS SELECT odbc_bind_params(getvariable('conn'), getvariable('params1'), row(?))

statement ok
EXECUTE p1_bind(255::UTINYINT)

query I
EXECUTE p1
----
255

statement ok
DEALLOCATE p1_bind

statement ok
DEALLOCATE p1

statement ok
SELECT odbc_close(getvariable('conn'))
