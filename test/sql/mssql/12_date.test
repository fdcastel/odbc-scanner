# name: test/sql/mssql/12_date.test
# description: test for DATE type with MSSQL
# group: [mssql_12_date]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''2020-12-31'' AS DATE)')
----
2020-12-31

query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''2020-12-31'' AS DATE)')
)
----
DATE

query II
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''foo'' AS NVARCHAR(max)), CAST(''2020-12-31'' AS DATE)')
----
foo	2020-12-31

query II
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''2020-12-31'' AS DATE), CAST(''foo'' AS NVARCHAR(max))')
----
2020-12-31	foo

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''2020-12-31'' AS DATE)',
  enable_columns_binding=TRUE)
----
2020-12-31

statement error
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''foo'' AS NVARCHAR(max)), CAST(''2020-12-31'' AS DATE)',
  enable_columns_binding=TRUE)
----
Invalid Descriptor Index

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS DATE)', params=row('2020-12-31'::DATE))
----
2020-12-31

statement ok
SET VARIABLE params1 = odbc_create_params()

statement ok
PREPARE p1 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS DATE)', params_handle=getvariable('params1'))

statement ok
PREPARE p1_bind AS SELECT odbc_bind_params(getvariable('conn'), getvariable('params1'), row(?))

statement ok
EXECUTE p1_bind('2020-12-31'::DATE)

query I
EXECUTE p1
----
2020-12-31

statement ok
EXECUTE p1_bind('1970-01-01'::DATE)

query I
EXECUTE p1
----
1970-01-01

statement ok
EXECUTE p1_bind('1969-12-31'::DATE)

query I
EXECUTE p1
----
1969-12-31

statement ok
EXECUTE p1_bind('0001-01-01'::DATE)

query I
EXECUTE p1
----
0001-01-01

statement ok
EXECUTE p1_bind('9999-12-31'::DATE)

query I
EXECUTE p1
----
9999-12-31

statement ok
DEALLOCATE p1_bind

statement ok
DEALLOCATE p1

statement ok
SELECT odbc_close(getvariable('conn'))
