
# name: test/sql/mssql/15_datetimeoffset.test
# description: test for DATETIMEOFFSET type with MSSQL
# group: [mssql_15_datetimeoffset]

require odbc_scanner

require icu

statement ok
set TimeZone = 'Australia/Darwin'

query I
SELECT timezone(current_timestamp)
----
34200

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''2020-12-31 23:58:59.1234567+00:00'' AS DATETIMEOFFSET)')
----
2021-01-01 09:28:59.123456+09:30

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''2020-12-31 23:58:59.1234567+00:01'' AS DATETIMEOFFSET)')
