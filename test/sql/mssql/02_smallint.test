# name: test/sql/mssql/02_smallint.test
# description: test for SMALLINT type with MSSQL
# group: [mssql_02_smallint]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(42 AS SMALLINT)')
----
42

query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(42 AS SMALLINT)')
)
----
SMALLINT

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(42 AS SMALLINT)',
  enable_columns_binding=TRUE)
----
42

statement error
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''foo'' AS NVARCHAR(max)), CAST(42 AS SMALLINT)',
  enable_columns_binding=TRUE)
----
Invalid Descriptor Index

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS SMALLINT)', params=row(42::SMALLINT))
----
42

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS SMALLINT)', params=row(0::SMALLINT))
----
0

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS SMALLINT)', params=row(32767::SMALLINT))
----
32767

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS SMALLINT)', params=row(-32767::SMALLINT))
----
-32767

statement ok
SET VARIABLE params1 = odbc_create_params()

statement ok
PREPARE p1 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS SMALLINT)', params_handle=getvariable('params1'))

statement ok
PREPARE p1_bind AS SELECT odbc_bind_params(getvariable('conn'), getvariable('params1'), row(?))

statement ok
EXECUTE p1_bind(32767::SMALLINT)

query I
EXECUTE p1
----
32767

statement ok
DEALLOCATE p1_bind

statement ok
DEALLOCATE p1

statement ok
SELECT odbc_close(getvariable('conn'))
