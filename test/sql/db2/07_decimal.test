# name: test/sql/db2/07_decimal.test
# description: test for DECIMAL type with DB2
# group: [db2_07_decimal]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''1.234'' AS DECIMAL(4,3)) FROM sysibm.sysdummy1')
----
1.234

query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''1.234'' AS DECIMAL(4,3)) FROM sysibm.sysdummy1')
)
----
DECIMAL(4,3)

query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''1.234'' AS NUMERIC(4,3)) FROM sysibm.sysdummy1')
)
----
DECIMAL(4,3)

