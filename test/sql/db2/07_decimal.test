query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS DECIMAL(31,3)) FROM sysibm.sysdummy1',
  params=row('1234567890123456789012345678.123'::DECIMAL(31,3)))
----
1234567890123456789012345678.123

statement ok
SET VARIABLE params16 = odbc_create_params()

statement ok
PREPARE p16 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS DECIMAL(4,3)) FROM sysibm.sysdummy1',
  params_handle=getvariable('params16'))

statement ok
PREPARE p16_bind AS SELECT odbc_bind_params(getvariable('conn'), getvariable('params16'), row(?))

statement ok
EXECUTE p16_bind('1.234'::DECIMAL(4,3))

query I
EXECUTE p16
----
1.234

statement ok
