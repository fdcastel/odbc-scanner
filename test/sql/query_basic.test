require odbc_scanner

statement error
SELECT * FROM odbc_query()
----
<REGEX>:.*Binder Error: No function matches the given name and argument types 'odbc_query\(\)'.*

statement error
SELECT * FROM odbc_query(NULL, 'SELECT 42')
