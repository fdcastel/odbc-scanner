# name: test/sql/type_bigint.test
# description: test for BIGINT type
# group: [sql_type_bigint]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('Driver={DuckDB Driver};')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT 42::BIGINT')
----
42

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::BIGINT', params=row(42::BIGINT))
----
42

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::BIGINT', params=row(0::BIGINT))
----
0

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::BIGINT', params=row(9223372036854775807::BIGINT))
----
9223372036854775807

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::BIGINT', params=row(-9223372036854775807::BIGINT))
----
-9223372036854775807

statement ok
SET VARIABLE params1 = odbc_create_params()

statement ok
PREPARE p1 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::BIGINT', params_handle=getvariable('params1'))

statement ok
PREPARE p1_bind AS SELECT odbc_bind_params(getvariable('params1'), row(?))

statement ok
EXECUTE p1_bind(9223372036854775807::BIGINT)

query I
EXECUTE p1
----
9223372036854775807

statement ok
DEALLOCATE p1_bind

statement ok
DEALLOCATE p1

statement ok
SELECT odbc_close(getvariable('conn'))
