# name: test/sql/type_utinyint.test
# description: test for UTINYINT type
# group: [sql_type_utinyint]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('Driver={DuckDB Driver};')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT 42::UTINYINT')
----
42

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::UTINYINT', params=row(42::UTINYINT))
----
42

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::UTINYINT', params=row(0::UTINYINT))
----
0

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::UTINYINT', params=row(255::UTINYINT))
----
255

statement ok
SET VARIABLE params1 = odbc_create_params()

statement ok
PREPARE p1 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::UTINYINT', params_handle=getvariable('params1'))

statement ok
PREPARE p1_bind AS SELECT odbc_bind_params(getvariable('params1'), row(?))

statement ok
EXECUTE p1_bind(255::UTINYINT)

query I
EXECUTE p1
----
255

statement ok
DEALLOCATE p1_bind

statement ok
DEALLOCATE p1

statement ok
SELECT odbc_close(getvariable('conn'))
